<div id='welcome'>
  <div class='title'>
    <%= image_tag('paramotiv_mint_white.png') %>
  </div>
</div>

<div id='my_garage' data-user-id='1'>

  <div class='container'>

    <div class='row info'>
      <div class='col-xs-12 col-md-6 ciyg'>
        <h2>Welcome to your Garage</h2>
        <h4>
        <br>
        // Browse upcoming service data and find current recalls.
        <br>
        <br>
        // Find and contact your nearest dealer.
        <br>
        <br>
        // Discover retail, trade-in, and private party values.
        </h4>
        <h2><a class='btn btn-info new_cars'>Add New Vehicle</a></h2>
      </div>
      <div class='col-xs-12 col-md-6 car_params'>
          <%= form_for (@car), remote: true do |f| %>
            <div class='row initialize'>
              <div class='col-xs-6'>
                <br>
                <%= f.select :make, ['Select make...'], {}, {class: 'form-control'} %>
              </div>
              <div class='col-xs-6'>
                <br>
                <%= f.select :model, ['Select model...'], {}, {class: 'form-control'} %>
              </div>
              <div class='col-xs-6'>
                <br>
                <%= f.select :year, ['Select year...'], {}, {class: 'form-control'} %>
              </div>
              <div class='col-xs-6'>
                <br>
                <%= f.select :style, ['Select style...'], {}, {class: 'form-control'} %>
              </div>
              <div class='col-xs-6'>
                <br>
                <%= f.text_field :mileage, {class: 'form-control', autofocus: true, placeholder: 'Mileage...'} %>
              </div>
              <div class='col-xs-6'>
                <br>
                <%= f.text_field :zip, {class: 'form-control', autofocus: true, placeholder: 'Zip code...'} %>
                <%= f.hidden_field :style_id  %>
                <%= f.hidden_field :model_year_id %>
              </div>
              <div class='col-xs-12'>
                <br>
                <br>
                <%= f.submit 'Add to Garage', class: 'btn btn-success add_car' %><a class='btn btn-success cancel_new_car'>Cancel</a>
              </div>
            </div>
          <% end %>
      </div>
    </div>
      <br>
      <br>



      <div class='row' id='garage'>
        <% @cars.each do |car| %>
          <%= render car %>
        <% end %>
      </div>

  </div>
</div>
