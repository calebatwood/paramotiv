<h2>Cars in your garage<div class='pull-right'><%= link_to 'New Car', new_car_path, class: 'btn btn-info' %></div></h2>
<br>
<br>

<div class='well'>
  <table id='garage'>
    <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td><h4><%= car.year %> <%= car.make.capitalize %> <%= car.model.capitalize %> <%= car.style %></h4></td>
          <td class='pull-right'><%= link_to 'Remove from garage', car, class: 'btn btn-warning', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td class='btn btn-primary' id='mainentance'>Maintenance</td>
          <td class='btn btn-success' value="<%= car.make %>" data="<%= car.zip %>">Nearest Dealer</td>
          <td class='btn btn-danger' id='trade'>Trade In</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div id='dealer'></div>
